

<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @*load the LOGO the and Main Layers*@
    <div id="wrapper" >
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.Action("Index", "Posts")">
                        <img src="@Url.Content("~/Images/logo.jpg")" />
                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Inicio", "Index", "Posts")</li>
                        <li>@Html.ActionLink("Acerca de", "Index", "Posts")</li>
                        <li>@Html.ActionLink("Contacto", "Index", "Posts")</li>
                    </ul>
                </div>
            </div>

        </div>

        @*s SIDE BAR:putting the side bar, and calling the funtion to have the lastest POSTs*@
        <div class="sidebar">
            <h1>Lastest Blog Posts</h1>
            @foreach (var item in BlogExam.Models.Post.GetLastedPost())
            {
                <br>

                @Html.ActionLink(item.TITLE, "Details", "Posts", new { id = item.Id }, null)
                <br />
                <br>
                @item.DATE
                <br />
            }
        </div>
    </div>    


    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
